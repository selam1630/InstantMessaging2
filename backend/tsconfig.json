{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": ".", 
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "prisma-client": ["./prisma-client/client"]  // local path alias
    },
    "skipLibCheck": true
  },
  "include": ["src", "prisma-client"],
  "exclude": ["node_modules"]
}
